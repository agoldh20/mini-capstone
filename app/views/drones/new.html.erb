<% if @errors %>
  <% @errors.each do |error| %>
    <h2>  <%= error %> </h2>
  <% end %>
<% end %>

<h1>New Drone</h1>

<%= form_tag '/drones', method: :post do %>
  <div>
    Name: <input type="text" name="name" value="<%= @drone.name %>" placeholder="Brand/Model">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @drone.price %>" placeholder="Price">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @drone.description %>" placeholder="Description"> 
  </div>
  <div>

  <select name="supplier_id" class="form-field-dark">
    <% @suppliers.each do |supplier| %>
      <option value="<%= supplier.id %>" <%= 'selected="selected"' if supplier.id == @drone.supplier_id %>><%= supplier.name %></option>
    <% end %>
  </select>
 
  </div>
  <input type="submit" value="Fly it!">
<% end %>



